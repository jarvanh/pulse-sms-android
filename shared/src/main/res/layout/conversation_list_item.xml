<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="@dimen/conversation_list_padding"
    android:layout_marginEnd="@dimen/conversation_list_padding"
    android:background="@drawable/conversation_list_item_background"
    android:elevation="2dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:id="@+id/card"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:civ_border_width="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/image_letter"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="-1dp"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/group_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_group"
            android:layout_marginTop="-1dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/unread_indicator"
                android:src="@android:color/black"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primaryText"
                android:id="@+id/name"
                android:maxLines="1"
                android:ellipsize="end" />
            
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/secondaryText"
            android:id="@+id/summary"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

</LinearLayout>